<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DentalECommerceApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_Primary</item>
        <item name="colorPrimaryVariant">@color/color_secondary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_Primary</item>
        <item name="colorSecondaryVariant">@color/color_Primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_secondary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/color_Primary</item>

        <!-- Dark Mode -->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Enable Transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>
</resources>